<div class="content-div">
    <div class="hello-headers">
        <h1>hello there, welcome to my petition!</h1>
        <img
            class="cover"
            src="/public/F3E3EA864B4B80AE95FB53408BC30D1F.jpeg"
            alt=""
        />
        <h2>Please log in to sign the petition.</h2>
    </div>
    <div class="div_form">
        <div class="error">
            {{error_status}}
        </div>
        <form method="post">
            <label for="user_email">
                Email:
                <input type="text" name="user_email" id="user_email" />
            </label>
            <label for="user_password">Password:
                <input
                    type="password"
                    name="user_password"
                    id="user_password"
                />
            </label>
            <button type="submit" id="login_btn">Log in</button>
        </form>
    </div>

</div>